{
    "name": "scrabble",
    "type": "module",
    "devDependencies": {
        "eslint": "^7.13.0",
        "http-server": "^0.12.3"
    },
    "scripts": {
        "start": "http-server",
        "lint": "eslint *.js"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "no-var": "error",
            "eqeqeq": "error",
            "semi": [
                "error",
                "always"
            ],
            "curly": [
                "warn",
                "all"
            ],
            "prefer-const": [
                "warn",
                {}
            ]
        }
    },
    "dependencies": {
        "express": "^4.17.1",
        "faker": "^5.1.0",
        "mongo": "^0.1.0"
    }
}
